// Allow backend to sign GCS URLs
resource "google_project_iam_member" "ai_integrationtest_storage_signer" {
  project = var.app_project_id
  role    = "roles/iam.serviceAccountTokenCreator"
  member  = module.ai_integrationtest_sa.iam_email
}

resource "google_project_iam_member" "sa_integrationtest_act_as" {
  project = var.app_project_id
  role    = "roles/iam.serviceAccountUser"
  member  = module.ai_integrationtest_sa.iam_email
}

resource "google_project_iam_member" "integrationtest_notebook_admin" {
  project = var.app_project_id
